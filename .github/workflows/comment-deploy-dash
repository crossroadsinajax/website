name: Post Deploy Dashboard
  on:
    pull_request_review_comment:
      types: [created, deleted]
  if: github.event_name == 'pull_request' && github.event.action == 'closed' && github.event.pull_request.merged == true
jobs:
  comment:
    name: Post Deploy Dashboard
    runs-on: ubuntu-latest
    steps:
      - name: Comment PR
        uses: thollander/actions-comment-pull-request@71efef5
        with:
          message: 'Please watch your deployment here: [Public Dashboard](https://p.datadoghq.com/sb/0aa0fbdbd-5b9d97c4e71bbe63860a7dce0928997a), [Private Dashboard](https://app.datadoghq.com/dashboard/y6w-ivc-yy7), [Prod Dashboard](https://app.datadoghq.com/dashboard/ud8-8k2-fe2)'
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
